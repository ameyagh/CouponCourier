    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="113dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="29dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/couponLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            tools:srcCompat="@android:drawable/screen_background_dark" />

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="105dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:inputType="none"
                android:text="Nike"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:inputType="none"
                android:text="20% Off"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="20sp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:inputType="none"
                android:text="Exp. 12/31/2021"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="14sp"
                android:textStyle="italic"
                android:typeface="normal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/restriction_icons"
        android:layout_width="355dp"
        android:layout_height="113dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="147dp"
        android:layout_marginBottom="9dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/online" />
    </LinearLayout>

    <TextView
        android:id="@+id/additional_restrictions"
        android:layout_width="355dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="263dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="none"
        android:scrollbars="vertical"
        android:text="additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions additional restrictions "
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textIsSelectable="true"
        android:textSize="14sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/redeem_button"
        android:layout_width="355dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="65dp"
        android:backgroundTint="#FF00A300"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:text="REDEEM" />

    <!--        </FrameLayout>-->




</RelativeLayout>